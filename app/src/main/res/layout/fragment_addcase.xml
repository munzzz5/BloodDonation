<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlight"
    tools:context=".fragment3">

    <TableLayout
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tex"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Case Details" />


        <TableRow
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Patient name" />

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mob no"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/mobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="phone"
                android:text="" />
        </TableRow>
        <TableRow
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="number"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital ID"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/hospId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textPersonName"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="textShortMessage"
                android:text="" />
        </TableRow>

        <TableRow android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Req"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/bloodno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="number"
                android:text="" />
        </TableRow>

        <TableRow android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Platelet Req"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/plateletno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="number"
                android:text="" />
        </TableRow>
        <TableRow android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group"/>

            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/bloodgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:inputType="text"
                android:text="" />
        </TableRow>




        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/addcase"
            android:layout_width="wrap_content"
            android:background="@color/colorBlueText"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Add case" />
    </TableLayout>



</FrameLayout>
</ScrollView>